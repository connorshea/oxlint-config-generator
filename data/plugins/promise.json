{
  "name": "promise",
  "rules": {
    "param-names": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-return-wrap": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "always-return": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "catch-or-return": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "prefer-await-to-callbacks": {
      "recommended": false,
      "fixable": false,
      "deprecated": false
    },
    "prefer-await-to-then": {
      "recommended": false,
      "fixable": false,
      "deprecated": false
    },
    "prefer-catch": {
      "recommended": false,
      "fixable": true,
      "deprecated": false
    },
    "no-native": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-callback-in-promise": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-promise-in-callback": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-nesting": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "avoid-new": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-new-statics": {
      "recommended": true,
      "fixable": true,
      "deprecated": false
    },
    "no-return-in-finally": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "valid-params": {
      "recommended": true,
      "fixable": false,
      "deprecated": false
    },
    "no-multiple-resolved": {
      "recommended": false,
      "fixable": false,
      "deprecated": false
    },
    "spec-only": {
      "recommended": false,
      "fixable": false,
      "deprecated": false
    }
  },
  "recommendedConfig": {
    "promise/always-return": "error",
    "promise/no-return-wrap": "error",
    "promise/param-names": "error",
    "promise/catch-or-return": "error",
    "promise/no-native": "off",
    "promise/no-nesting": "warn",
    "promise/no-promise-in-callback": "warn",
    "promise/no-callback-in-promise": "warn",
    "promise/avoid-new": "off",
    "promise/no-new-statics": "error",
    "promise/no-return-in-finally": "warn",
    "promise/valid-params": "warn"
  }
}
